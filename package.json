{
  "name": "esbuild-html-plugin",
  "version": "0.0.0",
  "description": "An esbuild plugin that generates an HTML file.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/esbuild-html-plugin.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "sideEffects": false,
  "type": "module",
  "exports": "./lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "ci": "run-p compile:check compile:emit format:check lint",
    "compile:check": "tsc",
    "compile:emit": "tsc --project tsconfig.emit.json",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "release": "npm version",
    "postrelease": "git push --follow-tags"
  },
  "dependencies": {
    "html-minifier": "^4.0.0"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-markdown": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
